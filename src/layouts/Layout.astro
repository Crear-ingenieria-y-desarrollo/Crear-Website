---
import Header from '../components/Header.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Crear - Soluciones en ingeniería y desarrollo" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header />

		<slot />

		<footer class="bg-gray-800 text-white">
			<div class="section-container py-12">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<div>
						<h3 class="footer-title">CREAR</h3>
						<p class="text-gray-300 text-sm">Soluciones innovadoras en ingeniería y desarrollo</p>
					</div>
					<div>
						<h3 class="footer-title">Enlaces</h3>
						<ul class="space-y-2">
							<li><a href="/" class="footer-link">Inicio</a></li>
							<li><a href="/servicios" class="footer-link">Servicios</a></li>
							<li><a href="/aplicaciones" class="footer-link">Aplicaciones Web</a></li>
							<li><a href="/contacto" class="footer-link">Contacto</a></li>
						</ul>
					</div>
					<div>
						<h3 class="footer-title">Contacto</h3>
						<ul class="space-y-2 text-gray-300">
							<li>info@crear.com</li>
							<li>+34 900 123 456</li>
							<li>Madrid, España</li>
						</ul>
					</div>
					<div>
						<h3 class="footer-title">Legal</h3>
						<ul class="space-y-2">
							<li><a href="/privacidad" class="footer-link">Política de Privacidad</a></li>
							<li><a href="/cookies" class="footer-link">Política de Cookies</a></li>
						</ul>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-300">
					<p>&copy; {new Date().getFullYear()} CREAR. Todos los derechos reservados.</p>
				</div>
			</div>
		</footer>
	</body>
</html>