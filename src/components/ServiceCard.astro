---
interface Props {
  title: string;
  description: string;
  image: string;
  items: string[];
}

const { title, description, image, items } = Astro.props;
---

<div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
  <div class="relative h-48 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transform transition duration-700 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-4 text-primary group-hover:text-primary-dark transition-colors">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <hr class="border-t-2 border-gray-200 my-4" />
    {items.length > 0 && (
      <ul class="list-disc pl-6 text-gray-600">
        {items.map((item) => (
          <li class="mb-2">{item}</li>
        ))}
      </ul>
    )}
  </div>
</div>
